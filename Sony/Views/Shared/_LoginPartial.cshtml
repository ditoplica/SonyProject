@using Microsoft.AspNetCore.Identity
@using Sony.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-primary navbar-btn navbar-link" style="color:white; border:1px solid white">Dilni</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" style="color:white;">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" style="color:white;">Log in</a></li>
    </ul>
}

@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: #DDE0E5;
    }

    .txb {
        background: #DBE0E6;
        border: 0 !important;
        border-radius: 0 !important;
        width: 89%;
        padding: 10px 20px !important;
    }

    input {
        font-family: 'Raleway', sans-serif;
    }
</style>
<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">

<div class="container">
    <div class="col-md-4 col-md-offset-4" style="background:#EAECF3;border-radius:5px; border-bottom:10px solid #A7AAB0; margin-top:10%;">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4 class="row" style="background:#3C8DBC;padding:20px 0px; margin-top:0; text-align:center;border-radius:5px 5px 0px 0px; color: white; font-family: 'Raleway', sans-serif;">ADMINISTRATOR</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <h4 style="background:#EAECF3;padding:10px 0px; margin-top:0; text-align:center; color: black; font-family: 'Raleway', sans-serif;">GameZone BEKA</h4>
                </div>
                <div class="form-group">
                    <i class="glyphicon glyphicon-user btn" style="width:10%; float:left; background:#DBE0E6; border:1px solid #CBCFD5; border-radius:0; margin-top:-1px; margin-right:1%"></i>
                    <input asp-for="Email" class="form-control txb" placeholder="Shkruaj Emailin" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="glyphicon glyphicon-lock btn" style="width:10%; float:left; background:#DBE0E6; border:1px solid #CBCFD5; border-radius:0; margin-top:-1px; margin-right:1%"></i>
                    <input asp-for="Password" class="form-control txb" placeholder="Shkruaj fjalëkalimin" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" class="checkbox checkbox-inline" />
                            Ruaj password-in?
                        </label>
                        <a asp-action="ForgotPassword" style="float:right">Keni harruar fjalëkalimin?</a>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-lg col-xs-12" style="border: 0px; border-radius:0; background:#3C8DBC; color:white">Kyçu</button>

                    <br style="margin-top:17px;" />
                </div>
       
                @*<div class="form-group" style="text-align:center;">
                        Anëtar i ri? <a href="/Account/Register">Regjistrohuni</a>
                    </div>*@
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}